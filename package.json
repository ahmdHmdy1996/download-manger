{
  "name": "download-manager",
  "version": "1.0.0",
  "description": "A powerful download manager for PC",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "generate-icon": "node convert-icon.js",
    "build": "npm run generate-icon && electron-builder"
  },
  "keywords": [
    "download",
    "manager",
    "electron"
  ],
  "author": "Download Manager <support@example.com>",
  "license": "MIT",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "play-dl": "^1.9.7",
    "yt-dlp-wrap": "^2.3.12",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.downloadmanager.app",
    "productName": "Download Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    }
  }
}
